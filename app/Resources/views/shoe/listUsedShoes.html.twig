{% extends 'base.html.twig' %}

{% block body %}
    {% for shoe in shoes %}
        {% if (shoe.sellers.sold == false) %}
            <a href="{{ path('shoe_view', {'id': shoe.id}) }}">
                <img src="{{ asset('uploads/images/' ~ shoe.images.snapshot[0].name) }}">
                <div>
                    {{ shoe.brand }}
                    {{ shoe.model }}
                </div>
                <div>
                    Size: {{ shoe.sellers.size }}
                    Price: {{ shoe.sellers.price }}
                </div>
            </a>
        {% endif %}
    {% endfor %}
{% endblock %}